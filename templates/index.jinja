{% extends "base.jinja" %}
{% block page_content %}

<p>
    LISTEN UP SOLDIER, THIS IS WAR OUT HERE. WAR, I TELL YOU.
    I NEED YOU TO MAKE SURE THESE DEPENDENCIES ARE KEPT UP-TO-DATE. OTHERWISE, WE'RE 0xDEADBEEF. CAPICHE?
</p>

<div class="row">
  <div class="col-md-6">
    <h2>Genesis Kits Overview</h2>
  </div>
  <div class="col-md-6">
    <p>
    
    <div class="form-check float-right">
      <input class="form-check-input" type="checkbox" value="" checked onclick="toggleModern()">
      <label class="form-check-label" for="modern">
        Hide dependencies that are up-to-date
      </label>
    </div>
    </p>
  </div>
</div>

  {% for kit, kit_info in kits.items()|sort() %}
  <div class="row">
    <div class="col-md-12">
      <h4>{{kit_info['display']}}</h4>
      <table class="table table-striped table-sm">
        <thead>
          <td class="w-50"><b>BOSH Release</b></td>
          <td class="w-25"><b>Cur. Ver</b></td>
          <td class="w-25"><b>Latest</b></td>
        </thead>
        {% for release, release_info in kit_info['releases'].items()|sort() %}
          <tr data-toggle="collapse" data-target="#{{release}}" class="clickable {% if release_info['version'] == release_info['latest_version'] %} modern{% endif %}">
              <td>{{release}}</td>
              <td>{{release_info['version']}}</td>
              <td>{{release_info['latest_version']}}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
  {% endfor %}




</div>
{% endblock %}